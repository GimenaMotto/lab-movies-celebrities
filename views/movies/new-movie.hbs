<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>ADD A NEW MOVIE </h2>
            <hr>

            <form action='/movies/create' method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">TITLE</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">GENRE</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">PLOT</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <div class="mb-3">

                    <label for="cast" class="form-label">CAST</label>

                    <select class="form-select" name="cast" id="cast" multiple>


                        {{#each celebrities}}

                        <option value="{{_id}}">{{name}}
                        </option>
                        {{/each}}

                    </select>

                </div>

                <div class="d-grid d-md-flex justify-content-center">
                    <button type="submit" class="btn btn-dark button-create-add ">CREATE MOVIE</button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="container buttons-back">
    <a href="/" class="btn btn-dark">BAK TO HOME</a>
    <a href="/movies" class="btn btn-dark">BACK TO MOVIES</a>
</div>